# If ESLint check fails, prevent commit
if [ $? -ne 0 ]; then
  echo "âŒ ESLint check failed. Please fix the errors before committing."
  echo "ğŸ’¡ You can run 'pnpm lint' to auto-fix some issues."
  exit 1
fi

